<!-- OfflinePOS.Admin/MainWindow.xaml -->
<Window x:Class="OfflinePOS.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfflinePOS.Admin"
        mc:Ignorable="d"
        Title="POS Admin System" Height="768" Width="1024" 
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Menu -->
        <Border Grid.Column="0" Background="#2c3e50">
            <StackPanel>
                <TextBlock Text="POS ADMIN" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="20,30,20,30" 
                           HorizontalAlignment="Center"/>

                <!-- Navigation Items -->
                <ListBox x:Name="NavigationListBox" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         Margin="0,20,0,0"
                         SelectionChanged="NavigationListBox_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="Padding" Value="20,0"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Background="{TemplateBinding Background}" 
                                                BorderThickness="0" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#1abc9c"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#34495e"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <!-- Menu Items -->
                    <ListBoxItem>Dashboard</ListBoxItem>
                    <ListBoxItem>Products</ListBoxItem>
                    <ListBoxItem>Categories</ListBoxItem>
                    <ListBoxItem>Suppliers</ListBoxItem>
                    <ListBoxItem>Customers</ListBoxItem>
                    <ListBoxItem>Transactions</ListBoxItem>
                    <ListBoxItem>Employees</ListBoxItem>
                    <ListBoxItem>Reports</ListBoxItem>
                    <ListBoxItem>Settings</ListBoxItem>
                </ListBox>

                <!-- User Info and Logout -->
                <Border BorderThickness="0,1,0,0" 
                        BorderBrush="#34495e" 
                        Margin="0,30,0,0" 
                        Padding="20,20">
                    <StackPanel>
                        <TextBlock x:Name="UserNameTextBlock" 
                                   Text="Admin User" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Administrator" 
                                   Foreground="#7f8c8d" 
                                   Margin="0,5,0,0"/>
                        <Button Content="Logout" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Foreground="#e74c3c" 
                                HorizontalAlignment="Left" 
                                Margin="0,10,0,0" 
                                Click="LogoutButton_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="#ecf0f1">
            <Grid>
                <!-- Header -->
                <Border Height="60" 
                        VerticalAlignment="Top" 
                        Background="White" 
                        BorderThickness="0,0,0,1" 
                        BorderBrush="#e0e0e0">
                    <Grid>
                        <TextBlock x:Name="PageTitleTextBlock" 
                                   Text="Dashboard" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center" 
                                   Margin="20,0"/>
                        <TextBlock Text="Offline POS v1.0" 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,20,0" 
                                   Foreground="#95a5a6"/>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <ContentControl x:Name="MainContent" 
                                Margin="0,60,0,0" 
                                Content="Welcome to POS Admin System" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                Foreground="#7f8c8d"/>
            </Grid>
        </Border>
    </Grid>
</Window>