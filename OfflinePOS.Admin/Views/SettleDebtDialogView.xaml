<!-- OfflinePOS.Admin/Views/SettleDebtDialogView.xaml -->
<Window x:Class="OfflinePOS.Admin.Views.SettleDebtDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfflinePOS.Admin.Views"
        mc:Ignorable="d"
        Title="Settle Customer Debt" 
        Width="400" Height="600" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Settle Customer Debt" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Form Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Customer Name (read-only) -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Customer" VerticalAlignment="Center" Margin="0,10"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CustomerName}" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,10"/>

            <!-- Current Balance (read-only) -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Current Balance" VerticalAlignment="Center" Margin="0,10"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentBalance, StringFormat=C2}" FontWeight="Bold" 
                       Foreground="Red" VerticalAlignment="Center" Margin="0,10"/>

            <!-- Payment Amount -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Payment Amount *" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,10" Padding="5"/>

            <!-- Payment Method -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Payment Method *" VerticalAlignment="Center" Margin="0,10"/>
            <ComboBox Grid.Row="3" Grid.Column="1" SelectedItem="{Binding SelectedPaymentMethod}" 
                      ItemsSource="{Binding PaymentMethods}"
                      Margin="0,10" Padding="5"/>

            <!-- Reference -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Reference" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Reference}" 
                     Margin="0,10" Padding="5"/>

            <!-- New Balance (read-only) -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="New Balance" VerticalAlignment="Center" Margin="0,10"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding NewBalance, StringFormat=C2}" FontWeight="Bold" 
                       Foreground="Green" VerticalAlignment="Center" Margin="0,10"/>

            <!-- Error Message -->
            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                       Margin="0,10"/>
        </Grid>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="Process Payment" Command="{Binding ProcessPaymentCommand}" 
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Width="120" Margin="0,0,10,0" Padding="10,5" 
                    Background="#4CAF50" Foreground="White"/>

            <Button Grid.Column="2" Content="Cancel" Command="{Binding CancelCommand}" 
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Width="100" Padding="10,5" 
                    Background="#9E9E9E" Foreground="White" />
        </Grid>

        <!-- Busy Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100" Height="10" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>