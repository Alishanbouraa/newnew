<Window x:Class="OfflinePOS.Admin.Views.SupplierInvoiceDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfflinePOS.Admin.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Supplier (if not already selected) -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Supplier:" 
                       VerticalAlignment="Center" 
                       Margin="0,10"
                       Visibility="{Binding IsSupplierSelectable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding Suppliers}" 
                      SelectedItem="{Binding SelectedSupplier}"
                      DisplayMemberPath="Name"
                      Margin="0,10"
                      Visibility="{Binding IsSupplierSelectable, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Supplier Display (if already selected) -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Supplier:" 
                       VerticalAlignment="Center" 
                       Margin="0,10"
                       Visibility="{Binding IsSupplierSelectable, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
            <TextBlock Grid.Row="0" Grid.Column="1" 
                       Text="{Binding Supplier.Name}" 
                       VerticalAlignment="Center" 
                       Margin="0,10"
                       Visibility="{Binding IsSupplierSelectable, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            <!-- Invoice Number -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Invoice Number:" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding InvoiceNumber, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,10"/>

            <!-- Invoice Date -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Invoice Date:" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>
            <DatePicker Grid.Row="2" Grid.Column="1" 
                        SelectedDate="{Binding InvoiceDate}" 
                        Margin="0,10"/>

            <!-- Due Date -->
            <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="Due Date:" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>
            <DatePicker Grid.Row="3" Grid.Column="1" 
                        SelectedDate="{Binding DueDate}" 
                        Margin="0,10"/>

            <!-- Total Amount -->
            <TextBlock Grid.Row="4" Grid.Column="0" 
                       Text="Total Amount:" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>
            <TextBox Grid.Row="4" Grid.Column="1" 
                     Text="{Binding TotalAmount, StringFormat=N2, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,10"/>

            <!-- Notes -->
            <TextBlock Grid.Row="5" Grid.Column="0" 
                       Text="Notes:" 
                       VerticalAlignment="Top" 
                       Margin="0,10"/>
            <TextBox Grid.Row="5" Grid.Column="1" 
                     Text="{Binding Notes}" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     Height="60" 
                     Margin="0,10"/>

            <!-- Error Message -->
            <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                       Text="{Binding ErrorMessage}" 
                       Foreground="Red" 
                       TextWrapping="Wrap"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                       Margin="0,10"/>
        </Grid>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Save" 
                    Command="{Binding SaveInvoiceCommand}" 
                    Width="100" 
                    Margin="0,0,10,0" 
                    Padding="10,5" 
                    Background="#2196F3" 
                    Foreground="White"/>

            <Button Grid.Column="2" 
                    Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Width="100" 
                    Padding="10,5" 
                    Background="#9E9E9E" 
                    Foreground="White" />
        </Grid>

        <!-- Busy Indicator -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100" Height="10" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>