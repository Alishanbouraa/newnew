<UserControl x:Class="OfflinePOS.Cashier.Views.DrawerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfflinePOS.Cashier.Views"
             xmlns:converters="clr-namespace:OfflinePOS.Core.Converters;assembly=OfflinePOS.Core"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="POS Cashier" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="|" Foreground="White" FontSize="20" Margin="10,0"/>
                    <TextBlock Text="Cash Drawer" Foreground="White" FontSize="20"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Back to Sales" Margin="5,0" Padding="10,3" 
                            Command="{Binding NavigateToSalesCommand}"
                            Visibility="{Binding IsDrawerOpen, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="Logout" Margin="5,0" Padding="10,3" Command="{Binding LogoutCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="50">
            <!-- Open Drawer UI -->
            <Border Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="30"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsDrawerOpen, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Open Cash Drawer" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,0,0,20" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Please enter the starting cash amount:" 
                               FontSize="16" 
                               Margin="0,10,0,5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" 
                                 Text="{Binding CashInAmount, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="18" 
                                 Padding="10,5" 
                                 Margin="0,0,10,0"/>

                        <TextBlock Grid.Column="1" 
                                   Text="$" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <Button Content="Open Drawer" 
                            FontSize="16" 
                            Padding="15,10" 
                            Margin="0,20,0,0"
                            Background="#27ae60"
                            Foreground="White"
                            Command="{Binding OpenDrawerCommand}"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap" 
                               Margin="0,10,0,0"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Manage Drawer UI -->
            <Border Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="30"
                    MaxWidth="600"
                    HorizontalAlignment="Center"
                    Visibility="{Binding IsDrawerOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <TextBlock Text="Cash Drawer Management" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>

                        <Grid Margin="0,20,0,0">
                            <TextBlock Text="Current Drawer Balance:" 
                                       FontSize="18" 
                                       HorizontalAlignment="Left"/>

                            <TextBlock Text="{Binding DrawerBalance, StringFormat='${0:N2}'}" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <!-- Cash In -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            Margin="0,0,10,0"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Cash In" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Amount:" 
                                       Margin="0,5"/>

                            <TextBox Text="{Binding CashInAmount, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" 
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Reason:" 
                                       Margin="0,5"/>

                            <TextBox Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" 
                                     Margin="0,0,0,10"/>

                            <Button Content="Add Cash" 
                                    Padding="10,5" 
                                    Margin="0,10,0,0"
                                    Background="#3498db"
                                    Foreground="White"
                                    Command="{Binding CashInCommand}"/>
                        </StackPanel>
                    </Border>

                    <!-- Cash Out -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            Margin="10,0,0,0"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Cash Out" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Amount:" 
                                       Margin="0,5"/>

                            <TextBox Text="{Binding CashOutAmount, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" 
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Reason:" 
                                       Margin="0,5"/>

                            <TextBox Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" 
                                     Margin="0,0,0,10"/>

                            <Button Content="Remove Cash" 
                                    Padding="10,5" 
                                    Margin="0,10,0,0"
                                    Background="#e74c3c"
                                    Foreground="White"
                                    Command="{Binding CashOutCommand}"/>
                        </StackPanel>
                    </Border>

                    <!-- Close Drawer -->
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            Margin="0,20,0,0"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="Close Drawer" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Enter the actual cash amount in the drawer:" 
                                       Margin="0,5"/>

                            <TextBox Text="{Binding CashOutAmount, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" 
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Closing Notes:" 
                                       Margin="0,5"/>

                            <TextBox Text="{Binding Reason, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="5" 
                                     Margin="0,0,0,10"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="60"/>

                            <Button Content="Close Drawer" 
                                    Padding="10,5" 
                                    Margin="0,10,0,0"
                                    Background="#34495e"
                                    Foreground="White"
                                    Command="{Binding CloseDrawerCommand}"/>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap" 
                               Margin="0,20,0,0"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2"
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="10" 
                             Margin="0,0,0,10"/>

                <TextBlock Text="{Binding LoadingMessage}" 
                           Foreground="White" 
                           FontSize="16" 
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>