<!-- OfflinePOS.Cashier/App.xaml -->
<Application x:Class="OfflinePOS.Cashier.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OfflinePOS.Cashier"
             xmlns:converters="clr-namespace:OfflinePOS.Core.Converters;assembly=OfflinePOS.Core">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Merge converter resource dictionary from Core -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OfflinePOS.Core;component/Styles/CommonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/OfflinePOS.Core;component/Converters/ConverterResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>